<!--Com/lbt/lbt.wxml-->
<swiper style=' height:90px' indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" next-margin="{{nextMargin}}">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image style='width:{{width+"px"}};height:90px;' src="{{item}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>



